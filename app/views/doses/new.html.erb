<h1>New Dose</h1>
<div class="container">
  <h1>Add your ingredient and a description </h1>
  <div class="row">
    <div class="col-sm-6">
      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.association :ingredient %>
          <%= f.input :description %>
        <%= f.submit "Add Dose", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
 <%= link_to 'Back', cocktails_path  %>
